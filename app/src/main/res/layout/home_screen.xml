<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/cv1"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/textColor"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true"
        android:layout_margin="16dp"
        >
        <RelativeLayout
            android:id="@+id/cardOneLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:id="@+id/cardOne"
                android:background="@drawable/card_2"
                >

                <EditText
                    android:id="@+id/cardOneName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="MARK SMITH"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textStyle="bold"
                    android:clickable="false"
                    android:background="@android:color/transparent"
                    card_view:fontFamily="@font/roboto_thin" />
                <EditText
                    android:id="@+id/cardOneDesignation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Designation"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="16dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="normal"
                    android:textSize="10dp"
                    android:layout_below="@+id/cardOneName"
                    android:clickable="false"
                    android:fontFamily="@font/poppins_light"
                    android:background="@android:color/transparent"
                    />

                <EditText
                    android:id="@+id/cardOneWebsite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="www.idbasket.com"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="28dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="normal"
                    android:textSize="8dp"
                    android:gravity="left"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/poppins_light"
                    android:layout_marginRight="16dp"
                    android:textColor="@color/textColor"
                    android:singleLine="true"
                    android:clickable="false"
                    android:background="@android:color/transparent"
                    />

                <EditText
                    android:id="@+id/cardOneEmialId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="idbasket@gmail.com"
                    android:layout_alignParentRight="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="normal"
                    android:textSize="8dp"
                    android:gravity="left"
                    android:layout_above="@+id/cardOneWebsite"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/textColor"
                    android:layout_marginBottom="6dp"
                    android:clickable="false"
                    android:background="@android:color/transparent"
                    />
                <EditText
                    android:id="@+id/cardOnePhoneNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9847474747"
                    android:layout_alignParentRight="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="normal"
                    android:textSize="8dp"
                    android:layout_above="@+id/cardOneEmialId"
                    android:layout_marginRight="16dp"
                    android:textColor="@color/textColor"
                    android:layout_marginBottom="6dp"
                    android:clickable="false"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="left"
                    android:background="@android:color/transparent"
                    />
                <EditText
                    android:id="@+id/cardOneAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Texas,USA"
                    android:layout_alignParentRight="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="normal"
                    android:textSize="8dp"
                    android:layout_above="@+id/cardOnePhoneNo"
                    android:layout_marginRight="16dp"
                    android:textColor="@color/textColor"
                    android:layout_marginBottom="6dp"
                    android:clickable="false"
                    android:fontFamily="@font/poppins_light"
                    android:background="@android:color/transparent"
                    android:gravity="left"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/cardOneShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:drawableLeft="@drawable/share_icon"
                android:text="Share"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/cardOne"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_light"
                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv2"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/textColor"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true"
        android:layout_margin="16dp"
        android:layout_below="@+id/cv3"
        >
        <RelativeLayout
            android:id="@+id/cardTwoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:id="@+id/cardTwo"
                android:background="@drawable/card_3"
                >

                <EditText
                    android:id="@+id/cardTwoName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/josefin_sans_thin"
                    android:text="@string/app_name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textStyle="bold"
                    android:clickable="false"
                    android:background="@android:color/transparent"
                    card_view:fontFamily="@font/roboto_thin" />
                <EditText
                    android:id="@+id/cardTwoDesignation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="normal"
                    android:textSize="10dp"
                    android:layout_below="@+id/cardTwoName"
                    android:clickable="false"
                    android:fontFamily="@font/josefin_sans_thin"
                    android:background="@android:color/transparent"
                    />

                <EditText
                    android:id="@+id/cardTwoWebsite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="18dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="normal"
                    android:textSize="8dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="16dp"
                    android:textColor="@color/textColor"
                    android:singleLine="true"
                    android:clickable="false"
                    android:fontFamily="@font/josefin_sans_thin"
                    android:background="@android:color/transparent"
                    />

                <EditText
                    android:id="@+id/cardTwoEmialId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:layout_alignParentRight="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="normal"
                    android:textSize="8dp"
                    android:layout_above="@+id/cardTwoWebsite"
                    android:layout_marginRight="16dp"
                    android:textColor="@color/textColor"
                    android:layout_marginBottom="12dp"
                    android:clickable="false"
                    android:fontFamily="@font/josefin_sans_thin"
                    android:background="@android:color/transparent"
                    />
                <EditText
                    android:id="@+id/cardTwoPhoneNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:layout_alignParentRight="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="normal"
                    android:textSize="8dp"
                    android:layout_above="@+id/cardTwoEmialId"
                    android:layout_marginRight="16dp"
                    android:textColor="@color/textColor"
                    android:layout_marginBottom="12dp"
                    android:clickable="false"
                    android:fontFamily="@font/josefin_sans_thin"
                    android:background="@android:color/transparent"
                    />
                <EditText
                    android:id="@+id/cardTwoAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:layout_alignParentRight="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="normal"
                    android:textSize="8dp"
                    android:layout_above="@+id/cardTwoPhoneNo"
                    android:layout_marginRight="16dp"
                    android:textColor="@color/textColor"
                    android:layout_marginBottom="12dp"
                    android:clickable="false"
                    android:fontFamily="@font/josefin_sans_thin"
                    android:background="@android:color/transparent"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/cardTwoShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:drawableLeft="@drawable/share_icon"
                android:text="Share"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/cardTwo"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:drawablePadding="10dp"
                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cv3"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/textColor"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true"
        android:layout_margin="16dp"
        android:layout_below="@+id/cv1"
        >
        <RelativeLayout
            android:id="@+id/cardThreeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:id="@+id/cardThree"
                android:background="@drawable/card_4"
                >
                <View
                    android:id="@+id/dummy"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerInParent="true"
                    ></View>

                <EditText
                    android:id="@+id/cardThreeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="24dp"
                    android:text="@string/app_name"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textStyle="bold"
                    android:clickable="false"
                    android:background="@android:color/transparent"
                    card_view:fontFamily="@font/raleway_thin"
                    android:layout_toLeftOf="@+id/dummy"
                    android:layout_centerVertical="true"
                    />
                <EditText
                    android:id="@+id/cardThreeDesignation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="24dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="normal"
                    android:textSize="10dp"
                    android:layout_below="@+id/cardThreeName"
                    android:clickable="false"
                    android:fontFamily="@font/raleway_thin"
                    android:background="@android:color/transparent"
                    android:layout_toLeftOf="@+id/dummy"
                    android:layout_centerVertical="true"
                    />

                <EditText
                    android:id="@+id/cardThreeAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:layout_alignParentRight="true"

                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="normal"
                    android:textSize="8dp"
                    android:layout_marginRight="52dp"
                    android:textColor="@color/textColor"
                    android:layout_centerVertical="true"
                    android:clickable="false"
                    android:fontFamily="@font/raleway_thin"
                    android:background="@android:color/transparent"
                    />

                <EditText
                    android:id="@+id/cardThreeWebsite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:layout_alignParentRight="true"

                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="normal"
                    android:textSize="8dp"
                    android:layout_marginRight="52dp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/textColor"
                    android:singleLine="true"
                    android:clickable="false"
                    android:fontFamily="@font/raleway_thin"
                    android:background="@android:color/transparent"
                    android:layout_below="@+id/cardThreeAddress"
                    />


                <EditText
                    android:id="@+id/cardThreePhoneNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:layout_alignParentRight="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textStyle="normal"
                    android:textSize="8dp"
                    android:layout_above="@+id/cardThreeAddress"
                    android:layout_marginRight="52dp"
                    android:textColor="@color/textColor"
                    android:layout_marginBottom="11dp"
                    android:clickable="false"
                    android:fontFamily="@font/raleway_thin"
                    android:background="@android:color/transparent"
                    />

            </RelativeLayout>
            <TextView
                android:id="@+id/cardThreeShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:drawableLeft="@drawable/share_icon"
                android:text="Share"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/cardThree"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:drawablePadding="10dp"
                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
</ScrollView>